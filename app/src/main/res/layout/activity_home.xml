<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pefami.benpaob.home.HomeActivity">
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tv_nearby_dealership"
            android:layout_width="100dp"
            android:background="#f0f0f0"
            android:textColor="#aa000000"
            android:textSize="20sp"
            android:text="附近车行"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_height="100dp" />
        <TextView
            android:id="@+id/tv_td_market"
            android:layout_width="100dp"
            android:background="#f0f0f0"
            android:textColor="#aa000000"
            android:textSize="20sp"
            android:text="广告市场"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_height="100dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tv_show_map"
            android:textColor="#aa000000"
            android:textSize="20sp"
            android:text="地图"
            android:gravity="center"
            android:layout_width="100dp"
            android:background="#f0f0f0"
            android:layout_height="100dp" />
    </LinearLayout>
    <View
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp">
        <TextView
            android:textColor="#aa000000"
            android:text="当前广告"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_selected_td"
            android:textColor="#aa000000"
            android:text="恒大地产"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tv_start_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_bg"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/start_run"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
