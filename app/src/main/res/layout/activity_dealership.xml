<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pefami.benpaob.login.DealershipActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textSize="24sp"
        android:gravity="center"
        android:text="@string/nearby_dealership"
        />
    <com.baidu.mapapi.map.MapView
        android:id="@+id/mv_dealership_map"
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:layout_height="0dp"></com.baidu.mapapi.map.MapView>
    <ListView
        android:id="@+id/lv_detail"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp"></ListView>
</LinearLayout>
